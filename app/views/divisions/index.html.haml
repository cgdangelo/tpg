- model_class = Division
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:league_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @divisions.each do |division|
      %tr
        %td= link_to division.id, division_path(division)
        %td= division.name
        %td= division.league_id
        %td=l division.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_division_path(division), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), division_path(division), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_division_path, :class => 'btn btn-primary'
