- model_class = Division
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @division.name
%p
  %strong= model_class.human_attribute_name(:league_id) + ':'
  %br
  = @division.league_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), divisions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_division_path(@division), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), division_path(@division), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
