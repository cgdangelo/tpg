= form_for @division, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :league_id, :class => 'control-label'
    .controls
      - if @division.id
        %span.input-xlarge.uneditable-input= @division.league.name
      - else
        = select_tag :league_id, option_groups_from_collection_for_select(Game.active_games, :leagues, :name, :id, :name, @division.league_id)
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), divisions_path, :class => 'btn'
