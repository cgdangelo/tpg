- model_class = League
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @league.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @league.description
%p
  %strong= model_class.human_attribute_name(:active) + ':'
  %br
  = @league.active
%p
  %strong= model_class.human_attribute_name(:game_id) + ':'
  %br
  = @league.game_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), leagues_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_league_path(@league), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), league_path(@league), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
