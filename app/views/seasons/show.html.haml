- model_class = Season
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @season.name
%p
  %strong= model_class.human_attribute_name(:active) + ':'
  %br
  = @season.active
%p
  %strong= model_class.human_attribute_name(:league_id) + ':'
  %br
  = @season.league_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), seasons_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_season_path(@season), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), season_path(@season), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
